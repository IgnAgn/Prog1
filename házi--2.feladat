    if b1 == 10:
        print(fromBase10(L1, b1, b2))
    elif b2 == 10:
        print(toBase10(L1, b1, b2))
    else:
        L1 = toBase10(L1, b1, b2)
        print(fromBase10(L1, b1, b2))

